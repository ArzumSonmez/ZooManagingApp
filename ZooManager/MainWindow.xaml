<Window x:Class="WPF_ZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Zoo Manager App" Height="450" Width="580">
    <Grid Background="#B85042">
        <Label Content="Zoo List" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Background="#FFE7E8D1"/>
        <ListBox x:Name="listZoos" HorizontalAlignment="Left" Height="175" Margin="10,45,0,0" VerticalAlignment="Top" Width="158" SelectionChanged="listZoos_SelectionChanged" Background="#A7BEAE" Foreground="#FF1E2761"/>
        <Label Content="Associated Animals List" HorizontalAlignment="Left" Margin="202,10,0,0" VerticalAlignment="Top" Background="#FFE7E8D1" />
        <ListBox x:Name="listAssociatedAnimals" HorizontalAlignment="Left" Height="175" Margin="202,45,0,0" VerticalAlignment="Top" Width="158" Background="#A7BEAE" Foreground="#FF1E2761" />
        <ListBox x:Name="listAllAnimals" HorizontalAlignment="Left" Height="299" Margin="396,45,0,0" VerticalAlignment="Top" Width="158" SelectionChanged="listAllAnimals_SelectionChanged" Background="#A7BEAE" Foreground="#FF1E2761" />
        <TextBox Name="myTextBox" HorizontalAlignment="Left" Height="39" Margin="10,274,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="350" Background="#A7BEAE" Foreground="#FF1E2761"/>
        <Button Content="Delete Zoo" HorizontalAlignment="Left" Margin="10,225,0,0" VerticalAlignment="Top" Height="30" Width="158" Click="DeleteZoo_Click" Background="#E7E8D1" />
        <Button Click="RemoveAnimal_Click" Content="Remove Animal" HorizontalAlignment="Left" Margin="202,225,0,0" VerticalAlignment="Top" Height="30" Width="158" Background="#E7E8D1"/>
        <Button Click="AddZoo_Click" Content="Add Zoo" HorizontalAlignment="Left" Margin="10,332,0,0" VerticalAlignment="Top" Height="30" Width="158" Background="#E7E8D1"/>
        <Button Click="UpdateZoo_Click" Content="Update Zoo" HorizontalAlignment="Left" Margin="10,367,0,0" VerticalAlignment="Top" Height="30" Width="158" Background="#E7E8D1"/>
        <Button Click="AddAnimal_Click" Content="Add Animal" HorizontalAlignment="Left" Margin="202,332,0,0" VerticalAlignment="Top" Height="30" Width="158" Background="#E7E8D1"/>
        <Button Click="UpdateAnimal_Click" Content="Update Animal" HorizontalAlignment="Left" Margin="202,367,0,0" VerticalAlignment="Top" Height="30" Width="158" Background="#E7E8D1"/>
        <Button Click="AddAnimalToZoo_Click" Content="Add Animal to Zoo" HorizontalAlignment="Left" Margin="396,10,0,0" VerticalAlignment="Top" Height="30" Width="158" Background="#E7E8D1">
        </Button>
        <Button Click="DeleteAnimal_Click" Content="Delete Animal" HorizontalAlignment="Left" Margin="396,362,0,0" VerticalAlignment="Top" Height="30" Width="158" Background="#E7E8D1"/>

    </Grid>
</Window>
